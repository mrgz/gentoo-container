FROM gentoo-container-base

ARG GCC_VERSION

COPY /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-c++ /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/
COPY /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-cpp /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/
COPY /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-g++ /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/
COPY /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-gcc /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/
COPY /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-gcc-ar /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/
COPY /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-gcc-nm /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/

COPY /usr/bin/make /usr/bin/
COPY /usr/bin/sort /usr/bin/
COPY /usr/bin/ldd /usr/bin/
COPY /usr/bin/id /usr/bin/

RUN ln -s /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-c++ /usr/bin/c++
RUN ln -s /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-cpp /usr/bin/cpp
RUN ln -s /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-g++ /usr/bin/g++
RUN ln -s /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-gcc /usr/bin/gcc
RUN ln -s /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-gcc /usr/bin/cc
RUN ln -s /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-ar /usr/bin/ar
RUN ln -s /usr/x86_64-pc-linux-gnu/gcc-bin/${GCC_VERSION}/x86_64-pc-linux-gnu-nm /usr/bin/nm

